/*
class Node {
  public:
    int data;
    Node *next;

    Node(int x) {
       data = x;
       next = NULL;
    }
};
*/

class Solution {
  public:
    Node* getMid(Node* head) {
        Node* slow = head;
        Node* fast = head -> next;
        
        while(fast != NULL && fast -> next != NULL) {
            fast = fast -> next -> next;
            slow = slow -> next;
        }
        
        return slow;
    }
    
    Node* reverseLL(Node* head) {
        Node* curr  = head;
        Node* prev  = NULL;
        Node* ahead = NULL;
        
        while(curr != NULL) {
            ahead = curr -> next;
            curr -> next = prev;
            prev = curr;
            curr = ahead;
        }
        
        return prev;
    }
    
    bool isPalindrome(Node *head) {
        //  code here
        
        // base case 
        // 1) empty || 2) single node
        if(head == NULL || head -> next == NULL) {
            return true;
        }
        
        // step1 : get mid node of LL
        Node* midNode = getMid(head);
        
        // step2 : reverse the second half of the LL
        Node* temp = midNode -> next;
        midNode -> next = reverseLL(temp);
        
        // step3 : compare both the list now
        Node* h1 = head;
        Node* h2 = midNode -> next;
        
        while(h2 != NULL) {
            if(h1 -> data != h2 -> data) {
                return false;
            }
            
            h1 = h1 -> next;
            h2 = h2 -> next;
        }
        
        // step4 : reverse the second half of the LL again
        temp = midNode -> next;
        midNode -> next = reverseLL(temp);
        
        return true;
    }
};
