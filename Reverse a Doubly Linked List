/*
class Node {
  public:
    int data;
    Node *next;
    Node *prev;
    Node(int val) {
        data = val;
        next = NULL;
        prev = NULL;
    }
};

*/
class Solution {
  public:
    Node *reverse(Node *head) {
        // code here
        Node* currNode  = head;
        Node* prevNode  = NULL;
        Node* aheadNode = NULL;
        
        while(currNode != NULL) {
            aheadNode = currNode -> next;
            
            currNode -> next = prevNode;
            currNode -> prev = aheadNode;
            
            prevNode = currNode;
            currNode = aheadNode;
        }
        
        return prevNode;
    }
};
