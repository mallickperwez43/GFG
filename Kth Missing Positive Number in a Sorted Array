class Solution {
  public:
    int kthMissing(vector<int> &arr, int k) {
        // code here
        int n = arr.size();
        int l = 0;
        int r = n - 1;
        
        while(l <= r) {
            int mid = l + (r - l) / 2;
            // Calculate how many numbers are missing before arr[mid]
            int missingCount = arr[mid] - (mid + 1);
            
            if(missingCount < k) {
                l = mid + 1; // Not enough missing numbers yet, go right
            }
            else {
                r = mid - 1; // Found enough or too many, try to find a smaller index
            }
        }
        
        /* 
           Final Formula derivation:
           At the end of the loop, l is the number of elements in arr 
           that are smaller than the kth missing number.
           The kth missing number = k + (number of elements present before it)
        */
        return k + l; 
    }
};
