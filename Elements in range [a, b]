class Solution {
  public:
    int n;
    
    // Finds the first index i such that arr[i] >= val (Lower Bound)
    int firstGreaterOrEqaul(vector<int>& arr, int val) {
        int l = 0;
        int r = n - 1;
        int result = n;
        
        while(l <= r) {
            int mid = l + (r - l) / 2;
            
            if(arr[mid] >= val) {
                result = mid;
                r = mid - 1;
            }
            else {
                l = mid + 1;
            }
        }
        
        return result;
    }
    
    // Finds the first index i such that arr[i] > val (Upper Bound)
    int firstStrictlyGreater(vector<int>& arr, int val) {
        int l = 0;
        int r = n - 1;
        int result = n;
        
        while(l <= r) {
            int mid = l + (r - l) / 2;
            
            if(arr[mid] > val) {
                result = mid;
                r = mid - 1;
            }
            else {
                l = mid + 1;
            }
        }
        
        return result;
    }
    
    int countNumInRangeAtoB(int l, int r, vector<int>& arr) {
        int leftIdx = firstGreaterOrEqaul(arr, l);
        int rightIdx = firstStrictlyGreater(arr, r);
        
        return (rightIdx - leftIdx);
    }
    
    vector<int> cntInRange(vector<int> &arr, vector<vector<int>> &queries) {
        // code here
        n = arr.size();
        
        sort(arr.begin(), arr.end());
        
        vector<int> result;
        
        for(auto& query : queries) {
            int a = query[0];
            int b = query[1];
            
            int cnt = countNumInRangeAtoB(a, b, arr);
            
            result.push_back(cnt);
        }
        
        return result;
    }
};
