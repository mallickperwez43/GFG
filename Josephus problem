class Solution {
  public:
    int solve(int n, int k) {
        if(n == 1) {
            return 0;
        }
        
        return (solve(n - 1, k) + k) % n;
    }
    
    int josephus(int n, int k) {
        // code here
        int ans = solve(n, k); // 0 based indexing
        return ans + 1;
    }
};
