class kQueues {
    
    vector<int> arr;   // continuous storing of elements in an array
    vector<int> front; // storing the front element of k queues
    vector<int> rear;  // storing the rear element of k queues
    vector<int> next; // stores the index of next element for a queue or a free slot
    int freeSlot;
    
  public:
    kQueues(int n, int k) {
        // Initialize your data members
        arr.resize(n);
        front.assign(k, -1);
        rear.assign(k, -1);
        next.resize(n);
        
        for (int i = 0; i < n - 1; i++) next[i] = i + 1;
        next[n - 1] = -1; // Last slot points to null
        freeSlot = 0;
    }

    void enqueue(int x, int i) {
        // enqueue element x into queue i
        if(isFull()) return;
        
        int idx = freeSlot;
        freeSlot = next[idx];
        
        if(isEmpty(i)) front[i] = idx;
        else next[rear[i]] = idx;
        
        next[idx] = -1;
        rear[i] = idx;
        arr[idx] = x;
    }

    int dequeue(int i) {
        // dequeue element from queue i
        if(isEmpty(i)) return -1;
        
        int idx = front[i];
        front[i] = next[idx];
        
        if(front[i] == -1) rear[i] = -1;
        
        next[idx] = freeSlot;
        freeSlot = idx;
        
        return arr[idx];
    }

    bool isEmpty(int i) {
        // check if queue i is empty
        return front[i] == -1;
    }

    bool isFull() {
        // check if array is full
        return freeSlot == -1;
    }
};
