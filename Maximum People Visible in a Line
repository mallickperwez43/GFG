class Solution {
  public:
    vector<int> getPGE(vector<int>& arr, int n) {
        vector<int> result(n);
        stack<int> st;
        
        for(int i = 0; i < n; i++) {
            while(!st.empty() && arr[st.top()] < arr[i]) {
                st.pop();
            }
            
            result[i] = st.empty() ? -1 : st.top();
            st.push(i);
        }
        
        return result;
    }
    
    vector<int> getNGE(vector<int>& arr, int n) {
        vector<int> result(n);
        stack<int> st;
        
        for(int i = n - 1; i >= 0; i--) {
            while(!st.empty() && arr[st.top()] < arr[i]) {
                st.pop();
            }
            
            result[i] = st.empty() ? n : st.top();
            st.push(i);
        }
        
        return result;
    }
    
    int maxPeople(vector<int> &arr) {
        // code here
        // pge -> previous Greatest Element
        // pnge -> next Greatest Element
        
        int n = arr.size();
        
        vector<int> pg = getPGE(arr, n);
        vector<int> ng = getNGE(arr, n);
        
        int maxRange = INT_MIN;
        
        for(int i = 0; i < n; i++) {
            // till which index in left can ith person see
            int leftRange  = i - pg[i] - 1; 
            
            // till which index in right can ith person see
            int rightRange = ng[i] - i - 1; 
            
            // total range for ith person(+ 1 is self)
            int totalRange = leftRange + rightRange + 1;
            
            maxRange = max(maxRange, totalRange);
        }
        
        // why 1 because in worst case the person can see bare minimum see ownself 
        return maxRange == INT_MIN ? 1 : maxRange;
    }
};
