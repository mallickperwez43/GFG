/*
class Node {
  public:
    int data;
    Node* left;
    Node* right;

    Node(int value) {
        data = value;
        left = nullptr;
        right = nullptr;
    }
};*/

class Solution {
  public:
    void reverseInorder(Node *root, int& sum) {
        if(root == NULL) {
            return;
        }
        
        // right first
        reverseInorder(root -> right, sum);
        
        // place value of sum in root and add curNodeVal to sum
        int curNodeVal = root -> data;
        root -> data = sum;
        sum += curNodeVal;
        
        // then left
        reverseInorder(root -> left, sum);
    }
    
    void transformTree(Node *root) {
        // code here
        int sum = 0;
        reverseInorder(root, sum);
        return;
    }
};
