class Solution {
  public:
    int minMen(vector<int>& arr) {
        // code here
        int n = arr.size();
        
        // Precompute the maxReaching for every index
        // for every l -> maxReach is r
        vector<int> maxReach(n, -1); // maximum reaching coverage from here  
        for(int i = 0; i < n; i++) {
            if(arr[i] != -1) {
                int idx = max(0, i - arr[i]); // lowest idx is 0
                
                maxReach[idx] = max(maxReach[idx], i + arr[i]);
            }
        }
        
        // Greedily sweep the farthest distance
        int count = 0;
        int currEnd = -1;
        int farthest = -1;
        int i = 0; 
        
        while(i < n) {
            
            farthest = max(farthest, maxReach[i]);
            
            if(currEnd < i) {
                if(farthest < i) {
                    return -1;
                }
                else {
                    currEnd = farthest;
                    count++;
                }
            }
            
            i++;
        }
        
        return count;
    }
};
