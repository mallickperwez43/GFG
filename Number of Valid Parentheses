class Solution {
  public:
    int findWays(int n) {
        // code here
        if(n & 1) 
            return 0;
        
        int k = n / 2;
        int result = 1;
        
        for (int i = 0; i < k; i++) {
            result *= (2 * k - i);
            result /= (i + 1);
        }
        
        return result / (k + 1);
    }
};
