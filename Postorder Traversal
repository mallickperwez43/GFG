/*
class Node {
  public:
    int data;
    Node* left;
    Node* right;

    Node(int val) {
        data = val;
        left = NULL;
        right = NULL;
    }
};
*/

class Solution {
  public:
    void solve(Node* root, vector<int>& result) {
        if(root == NULL)
            return;
        
        solve(root -> left, result);
        solve(root -> right, result);
        result.push_back(root -> data);
        
        return;
    }
    
    vector<int> postOrder(Node* root) {
        // code here
        if(root == NULL) {
            return {};
        }
        
        vector<int> result;
        solve(root, result);
        return result;
    }
};
